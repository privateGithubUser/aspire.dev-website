<div class="footer-column" role="contentinfo" aria-label="Resources">
  <h4 class="footer-heading">{Astro.locals.t('footer.resources' as any) || 'Resources'}</h4>
  <ul class="footer-links">
    <li>
      <a href="/reference/overview/">
        {Astro.locals.t('footer.reference' as any) || 'Reference'}
      </a>
    </li>
    <li>
      <a href="/community/contributor-guide/">
        {Astro.locals.t('footer.contributorGuide')}
      </a>
    </li>
    <li>
      <a href="/support/" rel="noopener noreferrer">
        {Astro.locals.t('footer.support')}
      </a>
    </li>
    <li>
      <a href="https://github.com/dotnet/aspire/releases" target="_blank" rel="noopener noreferrer">
        {Astro.locals.t('footer.releases' as any) || 'Releases'}
      </a>
    </li>
    <li>
      <a href="https://support.microsoft.com/en-US/contactus/" target="_blank" rel="noopener noreferrer">
        {Astro.locals.t('footer.contact')}
      </a>
    </li>
  </ul>
</div>

<style>
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-heading {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--sl-color-white);
    margin: 0 0 0.25rem 0;
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .footer-links a {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--sl-color-gray-2);
    text-decoration: none;
    font-size: var(--sl-text-sm);
    transition: color 0.15s ease;
  }

  .footer-links a:hover {
    color: var(--sl-color-white);
  }
</style>
